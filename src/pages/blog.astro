---
import Layout from '../layouts/Layout.astro';

interface BlogPost {
  slug: string;
  title: string;
  date: string;
  category: string;
  excerpt: string;
  readTime: string;
}

const posts: BlogPost[] = [
  {
    slug: 'building-this-site',
    title: 'Building This Site: Learning Astro & Tailwind CSS',
    date: '2025-11-30',
    category: 'Web Development',
    excerpt: 'A reflection on creating this personal website from scratch, exploring modern web development with Astro and Tailwind CSS.',
    readTime: '8 min read'
  }
];

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
}
---

<Layout title="Blog">
  <div class="space-y-16 px-6 py-16">
    <!-- Hero Section -->
    <section class="max-w-4xl mx-auto text-center space-y-4">
      <h1 class="text-6xl font-bold text-graytext">Blog</h1>
      <p class="text-base text-graytext/80 max-w-2xl mx-auto">
        Reflections on research, development, learning, and the journey of building this space.
      </p>
    </section>

    <!-- Posts Grid -->
    <section class="max-w-4xl mx-auto">
      <div class="space-y-8">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="group block">
            <article class="bg-greenels/5 border border-greenels/20 rounded-xl p-8 hover:bg-greenels/10 hover:border-blueels transition duration-300">
              <div class="flex items-start justify-between gap-4 mb-4">
                <div class="space-y-2 flex-1">
                  <div class="flex gap-2 items-center">
                    <span class="text-xs font-semibold text-greenels uppercase tracking-wide">{post.category}</span>
                    <span class="text-xs text-graytext/50">·</span>
                    <span class="text-xs text-graytext/60">{post.readTime}</span>
                  </div>
                  <h2 class="text-2xl md:text-3xl font-semibold text-graytext group-hover:text-blueels transition">
                    {post.title}
                  </h2>
                </div>
              </div>
              
              <p class="text-base text-graytext/80 mb-4 line-clamp-2">
                {post.excerpt}
              </p>
              
              <div class="flex items-center justify-between pt-4 border-t border-greenels/10">
                <time class="text-sm text-graytext/60">
                  {formatDate(post.date)}
                </time>
                <span class="text-greenels group-hover:text-blueels transition font-semibold text-sm">
                  Read more →
                </span>
              </div>
            </article>
          </a>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-16">
          <p class="text-graytext/60">No posts yet. Check back soon!</p>
        </div>
      )}
    </section>

    <!-- CTA Section -->
    <section class="max-w-3xl mx-auto text-center space-y-4 bg-blueels/5 border border-blueels/20 rounded-xl p-8">
      <h2 class="text-2xl font-semibold text-graytext">Interested in New Updates?</h2>
      <p class="text-base text-graytext/80">
        Follow along as I document my journey through research, development, and learning.
      </p>
      <a
        href="mailto:jan.jires.vy@gmail.com"
        class="inline-block bg-greenels text-charcoal font-semibold px-6 py-3 rounded-lg hover:bg-blueels transition"
      >
        Get in touch
      </a>
    </section>
  </div>
</Layout>
