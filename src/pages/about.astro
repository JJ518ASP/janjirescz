---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About Me">
  <div class="space-y-20 px-6 py-16">
    <!-- Hero Section (Centered) -->
    <section class="text-center max-w-2xl mx-auto">
      <h1 class="text-6xl font-bold text-graytext mb-4">About Me</h1>
      <p class="text-base text-graytext/80 leading-relaxed">
