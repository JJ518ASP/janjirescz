        <a
          href="https://www.linkedin.com/in/jan-jires"
          class="border-2 border-blueels text-graytext font-semibold px-6 py-3 rounded-lg hover:bg-blueels/10 transition"
        >
          LinkedIn
        </a>
      </div>
    </section>
  </div>
</Layout>
