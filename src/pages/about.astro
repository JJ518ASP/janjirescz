      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
        <!-- Left Accent -->
        <div class="hidden md:flex flex-col gap-4 py-8">
          <div class="hidden h-32 bg-greenels/10 rounded-lg border-l-4 border-greenels"></div>
          <div class="hidden h-32 bg-blueels/10 rounded-lg border-l-4 border-blueels"></div>
        </div>
        <!-- Text Right -->
        <div class="space-y-4">
          <h2 class="text-4xl font-semibold text-graytext">Education</h2>
          <div class="space-y-4">
            <div class="bg-greenels/5 border-l-4 border-greenels rounded-lg p-6 hover:bg-greenels/10 transition">
              <h3 class="text-lg font-semibold text-graytext">Bachelor's in Information Science</h3>
              <p class="text-sm text-graytext/70 mt-1">Masaryk University Brno | 2022 ‚Äì 2025</p>
            </div>
            <div class="bg-greenels/5 border-l-4 border-greenels rounded-lg p-6 hover:bg-greenels/10 transition">
              <h3 class="text-lg font-semibold text-graytext">Building AI Certificate</h3>
              <p class="text-sm text-graytext/70 mt-1">University of Helsinki & Minnalearn | 2024</p>
            </div>
            <div class="bg-greenels/5 border-l-4 border-greenels rounded-lg p-6 hover:bg-greenels/10 transition">
              <h3 class="text-lg font-semibold text-graytext">AI & Machine Learning Certificate</h3>
              <p class="text-sm text-graytext/70 mt-1">University of Helsinki & Minnalearn | 2024</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills (LEFT grid, RIGHT accent) -->
    <section class="max-w-5xl mx-auto">
