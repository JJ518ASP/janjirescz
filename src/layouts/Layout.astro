---
import '../styles/global.css';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body class="bg-charcoal text-2xl text-graytext min-h-screen flex flex-col">
	<header class="border-b border-graytext/20">
	  <div class="mx-auto flex max-w-sm items-center justify-between px-6 py-4">
	    <a href="/" class="text-xl font-semibold text-graytext">
	      Home
	    </a>

	    <nav class="flex gap-6 text-base">
	      <a
	        href="/about-me"
	        class="hover:text-blueels transition"
	      >
	        About me
	      </a>
	      <a
	        href="/blog"
	        class="hover:text-blueels transition"
	      >
	        Blog
	      </a>
	    </nav>
	  </div>
	</header>
    <main class="flex-1">
      <h1 class="text-6xl"></h1>
      <slot />
    </main>

    <footer class="mt-auto border-t border-graytext/20">
      <div class="mx-auto flex max-w-sm items-center justify-between gap-4 px-6 py-4 text-sm text-graytext">
        <p class="text-xs">Created by Jan Jire≈° 2025.</p>

        <div class="flex items-center gap-4">
          <a
            href="mailto:jan.jires.vy@gmail.com"
            class="hover:text-blueels transition"
            aria-label="E-mail"
          >
            <svg class="h-5 w-5" viewBox="0 0 24 24" aria-hidden="true" fill="currentColor">
              <path d="M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2zm0 2v.01L12 11l8-4.99V6H4zm0 3.2V18h16V9.2l-7.4 4.62a2 2 0 0 1-2.2 0L4 9.2z" />
            </svg>
          </a>

          <a
            href="https://www.instagram.com/janjires"
            class="hover:text-blueels transition"
            aria-label="Instagram"
          >
            <svg class="h-5 w-5" viewBox="0 0 24 24" aria-hidden="true" fill="currentColor">
              <path d="M7 2C4.24 2 2 4.24 2 7v10c0 2.76 2.24 5 5 5h10c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5H7zm0 2h10a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3H7a3 3 0 0 1-3-3V7a3 3 0 0 1 3-3zm5 2.5A4.5 4.5 0 1 0 16.5 11 4.5 4.5 0 0 0 12 6.5zm0 2A2.5 2.5 0 1 1 9.5 11 2.5 2.5 0 0 1 12 8.5zM17.75 6a1.25 1.25 0 1 0 1.25 1.25A1.25 1.25 0 0 0 17.75 6z" />
            </svg>
          </a>

          <a
            href="https://www.linkedin.com/in/jan-jires"
            class="hover:text-blueels transition"
            aria-label="LinkedIn"
          >
            <svg class="h-5 w-5" viewBox="0 0 24 24" aria-hidden="true" fill="currentColor">
              <path d="M4.98 3.5A2.5 2.5 0 1 0 5 8.5a2.5 2.5 0 0 0-.02-5zM3 9h4v12H3zM9 9h3.8v1.71h.05C13.4 9.95 14.76 9 16.6 9 20 9 21 11.24 21 14.42V21h-4v-5.14c0-1.23-.02-2.81-1.72-2.81-1.72 0-1.98 1.34-1.98 2.72V21H9z" />
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
